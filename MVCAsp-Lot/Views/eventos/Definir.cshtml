@model IEnumerable<MVCAsp_Lot.Models.evento>

@{
    ViewBag.Title = "EVENTOS A DEFINIR GANADOR";
}

<h2>LIST EVENTOS</h2>

<table class="table table-striped table-hover">
    <caption>List of eventos</caption>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.body)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.start_time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.finish_time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.passed)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            var aux = "";
            foreach (var tarj in item.tarjetas)
            {

                if (tarj.estado.CompareTo("w") == 0)
                {
                    aux = "disabled";
                }
            }
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.body)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.start_time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.finish_time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.passed)
                </td>
                <td class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" @aux>
                    <label class="form-check-label" for="exampleRadios1">
                        @if (aux.CompareTo("disabled") == 0)
                        {
                            <text>Action is not available</text>
                        }
                        else
                        {
                            @Html.ActionLink("Define Winner", "Define", new { id = item.id })
                        }

                    </label>

                </td>
            </tr>
        }

</table>
